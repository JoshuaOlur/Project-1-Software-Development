<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
	prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="edu.westga.cs3211.Pirate_Inventory_Ship_Manager.view.AddStockCodeBehind">

	<children>

		<Label layoutX="220.0" layoutY="20.0" text="Add Stock">
			<font>
				<Font size="24.0" />
			</font>
		</Label>


		<VBox layoutX="50.0" layoutY="60.0" prefWidth="500.0"
			spacing="20.0">
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>


			<HBox alignment="CENTER_LEFT" spacing="10.0">
				<Label prefWidth="120.0" text="Stock Name:">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
				<TextField fx:id="nameTextField" prefWidth="300.0" />
			</HBox>


			<HBox alignment="CENTER_LEFT" spacing="10.0">
				<Label prefWidth="120.0" text="Quantity:">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
				<Spinner fx:id="quantitySpinner" editable="true"
					initialValue="1" prefWidth="150.0" />
			</HBox>


			<HBox alignment="CENTER_LEFT" spacing="10.0">
				<Label prefWidth="120.0" text="Condition:">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
				<ComboBox fx:id="conditionComboBox" prefWidth="200.0" />
			</HBox>


			<VBox spacing="10.0">
				<Label text="Special Qualities:">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
				<HBox spacing="20.0">
					<CheckBox fx:id="flammableCheckBox" text="Flammable" />
					<CheckBox fx:id="liquidCheckBox" text="Liquid" />
					<CheckBox fx:id="perishableCheckBox" text="Perishable" />
				</HBox>
			</VBox>


			<HBox fx:id="expirationDateContainer" alignment="CENTER_LEFT"
				spacing="10.0" visible="false">
				<Label prefWidth="120.0" text="Expiration Date:">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
				<DatePicker fx:id="expirationDatePicker"
					prefWidth="200.0" />
			</HBox>


			<VBox spacing="10.0">
				<Label text="Available Storage Compartments:">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
				<ComboBox fx:id="storageComboBox" prefWidth="400.0" />
				<Label fx:id="storageInfoLabel" prefWidth="400.0"
					text="Select a storage compartment" wrapText="true" />
			</VBox>

			<!-- Error Message -->
			<Label fx:id="errorLabel" prefWidth="500.0" textFill="red"
				wrapText="true" />

			<!-- Buttons -->
			<HBox alignment="CENTER" spacing="20.0">
				<Button fx:id="addStockButton" onAction="#handleAddStock"
					prefWidth="100.0" text="Add Stock" />
				<Button fx:id="cancelButton" onAction="#handleCancel"
					prefHeight="25.0" prefWidth="110.0" text="Back To Landing" />
			</HBox>
		</VBox>
	</children>
</AnchorPane>
